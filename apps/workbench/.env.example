# Consultant Workbench Environment Variables
# Copy this file to .env.local for local development
# Set these in Netlify dashboard for production

# Backend API URL (required)
# Local: http://localhost:8000
# Production: https://your-backend-api.com
NEXT_PUBLIC_API_BASE=http://localhost:8000
NEXT_PUBLIC_API_URL=http://localhost:8000/v1

# Supabase Configuration (required)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# Optional: Admin API key for development bypass (DO NOT USE IN PRODUCTION)
# NEXT_PUBLIC_ADMIN_API_KEY=your-admin-key

# Optional: Set to 'true' to bypass auth in development
# NEXT_PUBLIC_BYPASS_AUTH=false
